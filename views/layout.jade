!!!
html
  head
    title= title
    script(type: 'text/javascript', src: '/javascripts/tiny_mce/tiny_mce.js')
    link(rel: 'stylesheet', href: '/stylesheets/style.css')
    - if (ga_id)
      :javascript
        | var ga_id = !{JSON.stringify(ga_id)};
        | var ga_domain = !{JSON.stringify(ga_domain)};
        | var _gaq = _gaq || [];
        | _gaq.push(['_setAccount', ga_id]);
        | _gaq.push(['_setDomainName', ga_domain]);
        | _gaq.push(['_trackPageview']);
        | (function() {
        |   var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        |   ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        |   var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        | })();
  body
    section
      header#masthead
        section.centered
          a(href: '/')
            h1= title
          h2= tagline
          ul
            - each link in links
              li
                a(href: link[1])= link[0]

      section#content.centered!= body
        footer#bottom
  